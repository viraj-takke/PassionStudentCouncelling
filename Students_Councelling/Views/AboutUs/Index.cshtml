@{
    ViewData["Title"] = "About Us";
}

<div class="about-us-container mt-5">
    <!-- Hero Section -->
    <div class="hero-section mt-5">
        <div class="hero-text">
            <h1>@ViewData["Title"]</h1>
            <p>Learn more about our mission, vision, and values.</p>
        </div>
    </div>

    <!-- Mission, Vision, Values -->
    <div class="about-content">
        <div class="section mission">
            <h2>Our Mission</h2>
            <p>To provide quality education and training to individuals and organizations, empowering them to reach their full potential.</p>
        </div>

        <div class="section vision">
            <h2>Our Vision</h2>
            <p>To be a leading provider of innovative and impactful training solutions worldwide.</p>
        </div>

        <div class="section values">
            <h2>Our Values</h2>
            <ul>
                <li>Integrity: We act with honesty and uphold the highest ethical standards.</li>
                <li>Excellence: We strive for excellence in everything we do.</li>
                <li>Innovation: We embrace change and drive innovation.</li>
                <li>Collaboration: We work together to achieve our goals.</li>
                <li>Customer Focus: We prioritize the needs of our customers.</li>
            </ul>
        </div>

        <!-- Team Section -->
        <div class="section team">
            <h2>Meet Our Team</h2>
            <div class="team-members">
                <div class="team-member">
                    <img src="~/images/Raj-Thakre.jpg" alt="Team Member 1">
                    <h3>Raj Thakre</h3>
                    <p>CEO & Founder</p>
                    <p>Raj Thakre is a visionary leader with over 20 years of experience in the industry.</p>
                </div>

                <div class="team-member">
                    <img src="https://via.placeholder.com/150" alt="Team Member 2">
                    <h3>Jane Smith</h3>
                    <p>Chief Operating Officer</p>
                    <p>Jane oversees our operations with a focus on efficiency and excellence.</p>
                </div>

                <div class="team-member">
                    <img src="https://via.placeholder.com/150" alt="Team Member 3">
                    <h3>Emily Johnson</h3>
                    <p>Chief Technology Officer</p>
                    <p>Emily drives our technology strategy and innovation.</p>
                </div>

                <div class="team-member">
                    <img src="https://via.placeholder.com/150" alt="Team Member 4">
                    <h3>Michael Brown</h3>
                    <p>Head of Marketing</p>
                    <p>Michael leads our marketing efforts to build our brand and reach new customers.</p>
                </div>
            </div>
        </div>
    </div>
</div>
