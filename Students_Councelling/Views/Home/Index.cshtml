@{
    ViewData["Title"] = "Home Page";
}

<div class="hero">
    <div class="hero-content text-center">
        <h1 class="display-4">Empower Your Future</h1>
        <p>Your journey to excellence starts here. Join us for top-notch consultancy services and examination solutions.</p>
        <a href="#services" class="btn btn-primary">Explore Services</a>
    </div>
</div>

<div id="services" class="services-section">
    <div class="container">
        <h2 class="section-title">Our Services</h2>
        <div class="service-cards">
            <div class="service-card">
                <i class="fas fa-chalkboard-teacher"></i>
                <h3>Consultancy</h3>
                <p>Expert guidance to help you achieve your professional goals.</p>
            </div>
            <div class="service-card">
                <i class="fas fa-book"></i>
                <h3>Examination Portal</h3>
                <p>Comprehensive solutions for all your examination needs.</p>
            </div>
            <div class="service-card">
                <i class="fas fa-cogs"></i>
                <h3>Custom Solutions</h3>
                <p>Tailored services to meet your unique requirements.</p>
            </div>
        </div>
    </div>
</div>

<div class="exams-section">
    <div class="container">
        <h2 class="section-title">Examinations</h2>
        <div class="exam-list">
            <div class="exam-item">
                <h3>Online Tests</h3>
                <p>Access and manage online exams with ease.</p>
                <a href="#" class="btn-primary">Start Now</a>
            </div>
            <div class="exam-item">
                <h3>Mock Exams</h3>
                <p>Prepare for the real thing with our mock tests.</p>
                <a href="#" class="btn-primary">Try It Out</a>
            </div>
            <div class="exam-item">
                <h3>Results & Analytics</h3>
                <p>Get detailed insights and track your progress.</p>
                <a href="#" class="btn-primary">View Results</a>
            </div>
        </div>
    </div>
</div>

<div class="contact-section">
    <div class="container">
        <h2 class="section-title">Get in Touch</h2>
        <p>Ready to start your journey? Contact us for more information.</p>
        <form class="contact-form">
            <input type="text" placeholder="Your Name" required>
            <input type="email" placeholder="Your Email" required>
            <textarea placeholder="Your Message" rows="4" required></textarea>
            <button type="submit">Send Message</button>
        </form>
    </div>
</div>
